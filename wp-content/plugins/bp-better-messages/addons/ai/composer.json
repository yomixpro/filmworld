{
  "require": {
    "openai-php/client": "^0.8.4",
    "symfony/http-client": "^7.0",
    "nyholm/psr7": "^1.8",
    "guzzlehttp/guzzle": "^7.8",
    "react/stream": "^1.3.0",
    "react/http": "^1.9.0"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "prefix-namespaces": [
      "strauss"
    ],
    "post-install-cmd": [
      "@prefix-namespaces"
    ],
    "post-update-cmd": [
      "@prefix-namespaces"
    ]
  },
  "require-dev": {
    "brianhenryie/strauss": "*"
  },
  "extra": {
    "strauss": {
      "target_directory": "dependencies",
      "namespace_prefix": "BetterMessages\\",
      "delete_vendor_packages": true
    }
  }
}
